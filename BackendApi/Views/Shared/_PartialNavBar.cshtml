@using System.Security.Claims
@using System.IdentityModel.Tokens.Jwt

<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 shadow">
    <div class="container-fluid">
        <button class="btn corelementos" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">
                <li class="nav-item active mt-1">
                    <a class="nav-link" href="#">
                        <i class="fas fa-user-circle text-gray-200"></i> @User.FindFirstValue(JwtRegisteredClaimNames.Name)
                    </a>
                </li>
                <div class="dropdown drop-menu-item">
                    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" id="dropdownButton">
                        HIPERROLL EMBALAGENS
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="selectOption('HIPERROLL EMBALAGENS')">HIPERROLL EMBALAGENS</a></li>
                        <li><a class="dropdown-item" href="#" onclick="selectOption('EMBALA PAPEL')">EMBALA PAPEL</a></li>
                    </ul>
                </div>
                <li class="nav-item active">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                id="button-logout"
                                class="btn btn-link nav-link"
                                style="padding: 0; border: none; background: none; color: inherit; text-decoration: none"
                                onclick="return confirm('Tem certeza de que deseja sair?');">
                            <i class="fas fa-sign-out-alt text-gray-200"></i> Sair
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</nav>

<script>
    function selectOption(optionText) {
        document.getElementById('dropdownButton').textContent = optionText;
    }
</script>